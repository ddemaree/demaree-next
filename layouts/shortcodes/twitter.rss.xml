{{- $url := printf "https://api.twitter.com/1/statuses/oembed.json?id=%v&dnt=1&omitscript=1" (index .Params 0) -}}
{{- $json := getJSON $url -}}
<figure class="dd-embed dd-embed-twitter twitter-noscript">
  {{ $cleanHTML := replaceRE "style=\".+\"" "" $json.html }}
  {{ $cleanHTML | safeHTML }}
</figure>