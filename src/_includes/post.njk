{% extends "default.njk" %}

{% block content %}
<main class="overflow-hidden flex-1">
  <article class="py-8 pb-16">

    <header class="max-w-lg pt-8 px-6 mx-auto pb-2">
      <h1 class="text-3xl md:text-4xl font-semibold leading-none mt-2 mb-2">{{ title }}</h1>

      {% if dek %}
      <p class="text-ink-medium text-lg leading-snug">{{ dek }}</p> 
      {% endif %}

      <div class="flex items-center my-4 font-soehne text-sm mb-8">
        <div>
          <span class="bg-container rounded-full h-10 w-10 inline-block overflow-hidden">
            <img src="/images/david-avatar-2020.jpg" class="block m-0" />
          </span>
        </div>
        <div class="ml-3 leading-tight">
          <div class="font-medium">David Demaree</div>
          <span class="text-xs text-ink-medium">
            {{ page.date | formattedDate }}
            â€¢
            {{ content | readingTime }} read
          </span>
        </div>
      </div>
    </header>

    <div class="wp-content max-w-lg px-6 mx-auto">
      {{ content | safe }}
    </div>
    <hr />
  </article>
</main>
{% endblock %}